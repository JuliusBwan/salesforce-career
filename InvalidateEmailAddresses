List<Contact> toInvalidate = [SELECT Id, Email FROM Contact 
                              WHERE Email != null 
                              AND NOT Email LIKE '%mint%'
                              AND NOT Email LIKE '%gbg%'
    						              AND NOT Email LIKE '%gbgplc%' 
                              AND NOT Email LIKE '%@bigmantra.com%'];

List<Contact> conToUpdate = new List<Contact>();

for (Contact c : toInvalidate) {
    if(!c.Email.endsWith('.invalid')){
        c.Email = c.Email + '.invalid';
    }
    conToUpdate.add(c);
}

update conToUpdate;
System.debug('Updated ' + conToUpdate.size() + ' contact emails.');

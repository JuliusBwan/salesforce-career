List<Contact> contacts = [SELECT Id, Email FROM Contact WHERE Email != null];
List<String> excluded = new List<String>{'mint','gbg','gbgplc','@bigmantra.com'};

for (Contact c : contacts) {
    Boolean skip = false;
    for (String p : excluded) if (c.Email.toLowerCase().contains(p)) { skip = true; break; }
    if (!skip) c.Email += '.invalid';
}

update contacts;
System.debug('Updated Contacts: ' + contacts);

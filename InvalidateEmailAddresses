List<Contact> toInvalidate = [
    SELECT Id, Email
    FROM Contact
    WHERE Email != null
    AND Email NOT LIKE '%mint%'
    AND Email NOT LIKE '%gbg%'
    AND Email NOT LIKE '%gbgplc%'
    AND Email NOT LIKE '%@bigmantra.com%'
    LIMIT 200
];


for (Contact c : toInvalidate) {
    c.Email = c.Email + '.invalid';
}

update toInvalidate;
System.debug('Updated ' + toInvalidate.size() + ' contact emails.');
